@startuml PFinanzasComponentDiagram
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml


Person(f, "Personal de Finanzas", "Genera y envía facturas")

System_Boundary(pf, "Portal de finanzas", , "Genera y envía facturas") {

    Component( pi, "Página de inicio", , "Página de inicio del portal de Finanzas")
    Component( pfa, "Página de cuentas", , "Muestra una lista de facturas, permitiendo su descarga y posterior envío")

}

System_Ext(bd, "Base de Datos", "Almacena información de contratos, líneas, clientes y facturacion", "MySQL")
