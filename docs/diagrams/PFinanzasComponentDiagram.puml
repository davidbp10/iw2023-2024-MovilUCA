Rel(f,pi,"Accede")
Rel(f,pfa,"Accede")

Rel(pf,api,"Recoge y manda información","AJAX")

Rel(pi, bd, "Consulta y actualiza")
Rel(pfa, bd, "Consulta y actualiza")



@enduml
